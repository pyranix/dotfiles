# Function to show notification with a prompt
notify_input() {
    notify-send -u low "$1" "$2"
}

# Function to read user input with a prompt
read_input() {
    read -p "$1: " user_input
    echo "$user_input"
}

# Prompt user for GitHub email and name
notify_input "GitHub Configuration" "Please enter your GitHub email"
github_email=$(read_input "Enter your GitHub email")

notify_input "GitHub Configuration" "Please enter your GitHub name"
github_name=$(read_input "Enter your GitHub name")

# Set up GitHub configuration
git config --global user.email "$github_email"
git config --global user.name "$github_name"

# Generate SSH key
notify_input "SSH Key Generation" "Generating SSH key..."
ssh-keygen -t rsa -b 4096 -C "$github_email"
notify_input "SSH Key Generation" "SSH key generated."

# Copy SSH key to clipboard if xclip is available
if command -v xclip >/dev/null 2>&1; then
    notify_input "SSH Key Copy" "Copying SSH key to clipboard..."
    xclip -sel clip <~/.ssh/id_rsa.pub
    notify_input "SSH Key Copy" "SSH key copied to clipboard."
else
    notify_input "SSH Key Copy" "xclip is not installed. Please manually copy the SSH key to add to your GitHub account."
fi

# Open GitHub settings page if xdg-open is available
if command -v xdg-open >/dev/null 2>&1; then
    notify_input "GitHub Settings" "Opening GitHub settings page..."
    xdg-open "https://github.com/settings/keys"
    notify_input "GitHub Settings" "Please add the SSH key to your GitHub account."
else
    notify_input "GitHub Settings" "xdg-open is not installed. Please manually open the GitHub settings page and add the SSH key."
fi
